{% extends 'back.html.twig' %}

{% block title %}User Management
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<div class="mb-4">
			<h1 class="text-xl font-semibold">Manage Users</h1>
		</div>
		{% embed 'partials/table/_table.html.twig' with {
        headers: ['ID', 'Lastname', 'Firstname', 'Email', 'Roles'],
            rows: users|map(user => [user.id, user.lastName, user.firstName, user.email, user.roles|join(', ')]),
            actions: { template: 'partials/table/_user_actions.html.twig' }
    } %}{% endembed %}
	{% endblock %}
