{% extends 'back.html.twig' %}

{% block title %}User Management
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<div class="mb-4">
			<h1 class="text-xl font-semibold">Manage Users</h1>
		</div>
		<div class="bg-white shadow-md rounded my-6">
			<table class="min-w-max w-full table-auto">
				<thead>
					<tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
						<th class="py-3 px-6 text-left">ID</th>
						<th class="py-3 px-6 text-left">Email</th>
						<th class="py-3 px-6 text-center">Roles</th>
						<th class="py-3 px-6 text-center">Actions</th>
					</tr>
				</thead>
				<tbody class="text-gray-600 text-sm font-light">
					{% for user in pagination %}
						<tr class="border-b border-gray-200 hover:bg-gray-100">
							<td class="py-3 px-6 text-left whitespace-nowrap">{{ user.id }}</td>
							<td class="py-3 px-6 text-left">{{ user.email }}</td>
							<td class="py-3 px-6 text-center">{{ user.roles|join(', ') }}</td>
							<td class="py-3 px-6 text-center">
								<a href="{{ path('dashboard_users_edit', { id: user.id }) }}" class="text-blue-500 hover:text-blue-600">Edit</a>
								|
								<a href="{{ path('dashboard_users_delete', { id: user.id }) }}" class="text-red-500 hover:text-red-600">Delete</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="py-2">
			{{ knp_pagination_render(pagination) }}
		</div>
	</div>
{% endblock %}
