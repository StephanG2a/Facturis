{% extends 'back.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	<div class="rounded-lg bg-white px-5 py-6 shadow sm:px-6">
		{{ form_start(form, {'attr': {'class': 'space-y-12 sm:space-y-16'}}) }}
		<div>
			<h2 class="text-base font-semibold leading-7 text-gray-900">Update User</h2>
			<p class="mt-1 max-w-2xl text-sm leading-6 text-gray-600">Use a permanent address where you can receive mail.</p>

			<div
				class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">

				{# First Name Field #}
				<div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
					{{ form_label(form.firstName, 'First Name:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					<div class="mt-2 sm:col-span-2 sm:mt-0">
						{{ form_widget(form.firstName, {'attr': {'class': 'border rounded p-2 w-full', 'autocomplete': 'given-name'}}) }}
						{{ form_errors(form.firstName) }}
					</div>
				</div>

				{# Last Name Field #}
				<div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
					{{ form_label(form.lastName, 'Last Name:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					<div class="mt-2 sm:col-span-2 sm:mt-0">
						{{ form_widget(form.lastName, {'attr': {'class': 'border rounded p-2 w-full', 'autocomplete': 'family-name'}}) }}
						{{ form_errors(form.lastName) }}
					</div>
				</div>

				{# Email Field #}
				<div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
					{{ form_label(form.email, 'Email:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					<div class="mt-2 sm:col-span-2 sm:mt-0">
						{{ form_widget(form.email, {'attr': {'class': 'border rounded p-2 w-full', 'autocomplete': 'email'}}) }}
						{{ form_errors(form.email) }}
					</div>
				</div>
			</div>
		</div>

		<div class="mt-6 flex items-center justify-end gap-x-6">
			<a href="{{ path('dashboard_users_index') }}" class="text-sm font-semibold leading-6 text-gray-900">Cancel</a>
			<button type="submit" class="inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
