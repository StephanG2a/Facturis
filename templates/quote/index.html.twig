{% extends 'back.html.twig' %}

{% block title %}Quote index
{% endblock %}

{% block body %}
	<h1>Quote index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>TotalPrice</th>
				<th>TaxRate</th>
				<th>Status</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>ValidUntil</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for quote in quotes %}
				<tr>
					<td>{{ quote.id }}</td>
					<td>{{ quote.totalPrice }}</td>
					<td>{{ quote.taxRate }}</td>
					<td>{{ quote.status }}</td>
					<td>{{ quote.createdAt ? quote.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ quote.updatedAt ? quote.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ quote.validUntil ? quote.validUntil|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('dashboard_quote_show', {'id': quote.id}) }}">show</a>
						<a href="{{ path('dashboard_quote_edit', {'id': quote.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('dashboard_quote_new') }}">Create new</a>
{% endblock %}
