{% extends 'back.html.twig' %}

{% block title %}Invoice
{% endblock %}

{% block body %}
	<h1>Invoice</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ invoice.id }}</td>
			</tr>
			<tr>
				<th>TotalPrice</th>
				<td>{{ invoice.totalPrice }}</td>
			</tr>
			<tr>
				<th>TaxAmount</th>
				<td>{{ invoice.taxAmount }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ invoice.status }}</td>
			</tr>
			<tr>
				<th>IssueDate</th>
				<td>{{ invoice.issueDate ? invoice.issueDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>DueDate</th>
				<td>{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ invoice.createdAt ? invoice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ invoice.updatedAt ? invoice.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('dashboard_invoice_index') }}">back to list</a>

	<a href="{{ path('dashboard_invoice_edit', {'id': invoice.id}) }}">edit</a>

	{{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
