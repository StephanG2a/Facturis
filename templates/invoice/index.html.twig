{% extends 'back.html.twig' %}

{% block title %}Invoice index
{% endblock %}

{% block body %}
	<h1>Invoice index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>TotalPrice</th>
				<th>TaxAmount</th>
				<th>Status</th>
				<th>IssueDate</th>
				<th>DueDate</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for invoice in invoices %}
				<tr>
					<td>{{ invoice.id }}</td>
					<td>{{ invoice.totalPrice }}</td>
					<td>{{ invoice.taxAmount }}</td>
					<td>{{ invoice.status }}</td>
					<td>{{ invoice.issueDate ? invoice.issueDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ invoice.createdAt ? invoice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ invoice.updatedAt ? invoice.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('dashboard_invoice_show', {'id': invoice.id}) }}">show</a>
						<a href="{{ path('dashboard_invoice_edit', {'id': invoice.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('dashboard_invoice_new') }}">Create new</a>
{% endblock %}
